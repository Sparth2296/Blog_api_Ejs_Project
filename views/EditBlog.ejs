<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Blog</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    body {
      font-family: "Poppins", sans-serif;
      background-color: #f8f9fa;
    }

    /* Navbar */
    nav.navbar {
      background-color: #343a40;
    }
    nav.navbar a.nav-link {
      color: white !important;
      transition: 0.3s;
    }
    nav.navbar a.nav-link:hover {
      color: #f39c12 !important;
    }

    /* Form Section */
    .form-section {
      padding: 60px 20px;
    }

    .form-container {
      background: #fff;
      padding: 40px;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      max-width: 700px;
      margin: auto;
    }

    .form-container h2 {
      text-align: center;
      font-weight: 600;
      margin-bottom: 30px;
      color: #333;
    }

    .form-control {
      border-radius: 10px;
    }

    .img-preview {
      display: block;
      margin: 20px auto;
      border-radius: 10px;
      max-height: 200px;
      object-fit: cover;
    }

    button {
      width: 100%;
      border-radius: 10px;
      background-color: #f39c12;
      border: none;
      font-weight: 600;
      transition: 0.3s;
    }

    button:hover {
      background-color: #d68910;
    }

    footer {
      background-color: #343a40;
      color: white;
      text-align: center;
      padding: 15px 0;
      margin-top: 60px;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold text-warning" href="/home">Pathuu's Blog</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/addblog">Add Blog</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Edit Blog Form -->
  <section class="form-section">
    <div class="form-container">
      <h2>Edit Blog</h2>
      <form action="/updateBlog/<%= blog._id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Blog Title</label>
          <input
            type="text"
            id="title"
            name="title"
            value="<%= blog.title %>"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="shortdescription" class="form-label">Short Description</label>
          <input
            type="text"
            id="shortdescription"
            name="shortdescription"
            value="<%= blog.shortdescription %>"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Full Description</label>
          <textarea
            id="description"
            name="description"
            class="form-control"
            rows="5"
            required
          ><%= blog.description %></textarea>
        </div>

        <div class="text-center">
          <img src="..<%= blog.Image %>" alt="<%= blog.title %>" class="img-preview" />
        </div>

        <div class="mb-3">
          <label for="Image" class="form-label">Update Blog Image</label>
          <input
            type="file"
            id="Image"
            name="Image"
            class="form-control"
            accept="image/*"
          />
        </div>

        <button type="submit" class="btn btn-warning mt-3 py-2">Update Blog</button>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <p>Â© <%= new Date().getFullYear() %> MyBlog. All rights reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
