<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= blog.title %> | MyBlog</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    body {
      font-family: "Poppins", sans-serif;
      background-color: #f8f9fa;
    }

    /* Navbar */
    nav.navbar {
      background-color: #343a40;
    }
    nav.navbar a.nav-link {
      color: white !important;
      transition: 0.3s;
    }
    nav.navbar a.nav-link:hover {
      color: #f39c12 !important;
    }

    /* Blog View */
    .blog-view-section {
      padding: 60px 20px;
    }

    .blog-container {
      background: #fff;
      padding: 40px;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      margin: auto;
    }

    .blog-container img {
      width: 100%;
      height: 400px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 30px;
    }

    .blog-container h2 {
      font-weight: 700;
      color: #333;
      margin-bottom: 20px;
    }

    .blog-container p {
      color: #555;
      line-height: 1.8;
    }

    .action-btns {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 30px;
    }

    .btn-warning {
      font-weight: 600;
      border-radius: 8px;
    }

    footer {
      background-color: #343a40;
      color: white;
      text-align: center;
      padding: 15px 0;
      margin-top: 60px;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold text-warning" href="/">Pathuu's Blog</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/addblog">Add Blog</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Blog Content -->
  <section class="blog-view-section">
    <div class="blog-container">
      <img src="..<%= blog.Image %>" alt="<%= blog.title %>">

      <h2><%= blog.title %></h2>
      <p class="text-muted"><%= blog.shortdescription %></p>
      <hr />
      <p><%= blog.description %></p>

      <div class="action-btns">
        <a href="/edit/<%= blog._id %>" class="btn btn-warning px-4">Edit</a>
        <a href="/delete/<%= blog._id %>" class="btn btn-danger px-4">Delete</a>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <p>Â© <%= new Date().getFullYear() %> MyBlog. All rights reserved.</p>
  </footer>

  <script>
    window.addEventListener("pageshow", function (event) {
      if (event.persisted || performance.getEntriesByType("navigation")[0].type === "back_forward") {
        window.location.reload();
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
